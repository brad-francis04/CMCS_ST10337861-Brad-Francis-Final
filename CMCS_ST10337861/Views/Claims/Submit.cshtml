@model CMCS_ST10337861.Models.Claim
@{
    ViewData["Title"] = "Submit Monthly Claim";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Submit Monthly Claim</h2>
                </div>
                <div class="card-body p-5">

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Submit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger mb-4"></div>
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger">@TempData["Error"]</div>
                        }

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Month" class="form-label fw-bold">Month <span class="text-danger">*</span></label>
                                <select asp-for="Month" class="form-select form-select-lg" asp-items="ViewBag.Months">
                                    <option value="">-- Select Month --</option>
                                </select>
                                <span asp-validation-for="Month" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Year" class="form-label fw-bold">Year</label>
                                <input asp-for="Year" class="form-control form-control-lg text-center" readonly />
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <div class="col-md-6">
                                <label asp-for="HoursWorked" class="form-label fw-bold">Hours Worked <span class="text-danger">*</span></label>
                                <input asp-for="HoursWorked" class="form-control form-control-lg" type="number" step="0.5" min="0.5" placeholder="e.g. 1.5" />
                                <span asp-validation-for="HoursWorked" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="HourlyRate" class="form-label fw-bold">Hourly Rate (R) <span class="text-danger">*</span></label>
                                <input asp-for="HourlyRate" class="form-control form-control-lg" type="number" step="0.01" min="50" placeholder="e.g. 120" />
                                <span asp-validation-for="HourlyRate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-4">
                            <label asp-for="Notes" class="form-label fw-bold">Additional Notes (Optional)</label>
                            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Any extra information..."></textarea>
                        </div>

                        <div class="mt-4">
                            <label class="form-label fw-bold">Supporting Documents (PDF, Word, Excel – Max 10MB each)</label>
                            <input type="file" name="files" multiple class="form-control form-control-lg" accept=".pdf,.docx,.xlsx,.doc" />
                            <div class="form-text">You can upload multiple files</div>
                        </div>

                        <div class="alert alert-info text-center fs-4 mt-4 py-4">
                            <strong>Total Amount: R<span id="totalAmount">0.00</span></strong>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold">Submit Claim</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const hoursInput = document.querySelector('[name="HoursWorked"]');
        const rateInput = document.querySelector('[name="HourlyRate"]');
        const totalSpan = document.getElementById('totalAmount');

        function updateTotal() {
            const hours = parseFloat(hoursInput.value) || 0;
            const rate = parseFloat(rateInput.value) || 0;
            totalSpan.textContent = (hours * rate).toFixed(2);
        }

        hoursInput?.addEventListener('input', updateTotal);
        rateInput?.addEventListener('input', updateTotal);
    </script>
}