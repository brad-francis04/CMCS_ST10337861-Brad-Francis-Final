@model IEnumerable<CMCS_ST10337861.Models.Claim>
@{
    ViewData["Title"] = ViewBag.PageTitle ?? "Pending Claims";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewBag.PageTitle</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No claims pending your approval at the moment.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Lecturer</th>
                        <th>Month/Year</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.Lecturer?.FullName</td>
                            <td>@claim.Month/@claim.Year</td>
                            <td>@claim.HoursWorked h</td>
                            <td>R @claim.HourlyRate</td>
                            <td><strong>R @claim.TotalAmount.ToString("F2")</strong></td>
                            <td><span class="badge bg-warning">@claim.Status</span></td>
                            <td>
                                <form asp-action="Approve" asp-route-id="@claim.ClaimId" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>

                                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal-@claim.ClaimId">
                                    Reject
                                </button>

                                <!-- Reject Modal -->
                                <div class="modal fade" id="rejectModal-@claim.ClaimId" tabindex="-1">
                                    <div class="modal-dialog">
                                        <form asp-action="Reject" asp-route-id="@claim.ClaimId" method="post">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirm Rejection</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to <strong>reject</strong> this claim?</p>
                                                    <p><strong>@claim.Month @claim.Year</strong> - R@claim.TotalAmount.ToString("F2")</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">Yes, Reject Claim</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
